<!-- This is a build file fragment that will be imported by the main build script -->
<project>
  <property name="gis2.randomscenario.dir" value="../maps/temp1"/>

  <target name="random-scenario" depends="jars" description="Generate a random scenario">
    <java classname="gis2.RandomScenarioGenerator" classpathref="path.common" fork="yes" dir="boot" maxmemory="1000m">
      <arg line="${gis2.randomscenario.dir}"/>
    </java>
  </target>

  <target name="scenario-editor" depends="jars" description="Run the scenario editor">
    <java classname="gis2.scenario.ScenarioEditor" classpathref="path.common" fork="yes" dir="boot" maxmemory="1000m">
      <arg line="${gis2.randomscenario.dir}"/>
    </java>
  </target>
</project>
